.workout-container
  .header
    .title-header
      #{@workouts.first.name.capitalize}
    .menu-button
      = link_to "Back", user_workouts_path(user_id: params[:user_id])

  %br

  = render partial: "form"

  %table{class: "table_format"}
    %tr
      %td{class: "top_row"}
        Date
      - @workouts.first.attributes.each do |attr_name, value|
        %td{class: "top_row"}
          - if value != nil
            - if filter_result(attr_name)
              = attr_name.capitalize
      - @workouts.each do |workout|
        %tr
          %td
            - day = workout.created_at.day
            - month = workout.created_at.month
            - year = workout.created_at.year
            = "#{month}/#{day}/#{year}"
          - workout.attributes.each do |attr_name, value|
            %td
              - if value != nil
                - if filter_result(attr_name)
                  = value 

      