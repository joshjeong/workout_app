.ledger-container
  .header
    .title-header
      #{@ledgers.first.name.capitalize}
    .menu-button
      = link_to content_tag(:i,nil, class:"fa fa-reply"), user_ledgers_path(user_id: params[:user_id])
  %br
  #container{:style => "min-width: 410px; height: 300px; margin: 0 auto"}
  = render partial: "form"

  %table{class: "table_format"}
    %tr
      %td{class: "top_row"}
        Date
      - @ledgers.first.attributes.each do |attr_name, value|
        %td{class: "top_row"}
          - if value != nil
            - if filter_result(attr_name)
              = attr_name.capitalize
      - @ledgers.each do |ledger|
        %tr
          %td
            = get_date(ledger)
          - ledger.attributes.each do |attr_name, value|
            %td
              - if value != nil
                - if filter_result(attr_name)
                  = value 


:javascript
  $(document).ready(function() {
  chart;
  
  var chart = $(function () {
  $('#container').highcharts({
      title: {
          text: 'Ledger Progress',
          x: -20 //center
      },
      xAxis: {

          categories: [ 
            #{
              @ledgers.map {|ledger| "#{get_date(ledger)}"}.join(', ')
            }]
      },
      yAxis: {
          title: {
              text: 'Average reps'
          },
          plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
          }]
      },
      tooltip: {
          valueSuffix: ' reps'
      },
      legend: {
          layout: 'vertical',
          align: 'right',
          verticalAlign: 'middle',
          borderWidth: 0
      },
      series: [{
          name: "#{@ledgers.first.name}",
          data: [ 
            #{
              @ledgers.map {|ledger| "#{ledger.reps}"}.join(', ')
            }]
      }]
  });
  });
  });
